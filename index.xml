<?xml version="1.0" encoding="utf-8"?>
<skin>
  <information>
    <name>GitHub Style Skin</name>
    <version>1.1.0</version>
    <description>GitHub 스타일의 티스토리 블로그 스킨입니다. 스킨 편집에서 탭 메뉴, 사이드바, 레이아웃 등을 자유롭게 설정할 수 있습니다.</description>
    <license>MIT License</license>
  </information>
  <author>
    <name>NAMUORI00</name>
    <homepage>https://github.com/NAMUORI00</homepage>
    <email></email>
  </author>

  <default>
    <recentEntries>5</recentEntries>
    <recentComments>5</recentComments>
    <recentTrackbacks>0</recentTrackbacks>
    <itemsOnGuestbook>10</itemsOnGuestbook>
    <tagsInCloud>30</tagsInCloud>
    <sortInCloud>1</sortInCloud>
    <expandComment>1</expandComment>
    <expandTrackback>0</expandTrackback>
    <lengthOfRecentNotice>25</lengthOfRecentNotice>
    <lengthOfRecentEntry>25</lengthOfRecentEntry>
    <lengthOfRecentComment>25</lengthOfRecentComment>
    <lengthOfRecentTrackback>25</lengthOfRecentTrackback>
    <lengthOfLink>25</lengthOfLink>
    <contentWidth>860</contentWidth>
    <showListOnCategory>2</showListOnCategory>
  </default>

  <variables>
    <!-- ═══ 디자인 ═══ -->
    <variablegroup name="디자인">
      <variable>
        <name>mainColor</name>
        <label><![CDATA[ 메인 테마 색상 ]]></label>
        <description><![CDATA[ 블로그의 주요 강조 색상을 설정합니다. ]]></description>
        <type>COLOR</type>
        <option />
        <default>#3b82f6</default>
      </variable>
      <variable>
        <name>headerImage</name>
        <label><![CDATA[ 헤더 배경 이미지 ]]></label>
        <description><![CDATA[ 상단 헤더 영역의 배경 이미지를 설정합니다. ]]></description>
        <type>IMAGE</type>
        <option />
        <default></default>
      </variable>
    </variablegroup>

    <!-- ═══ 상단 탭 메뉴 ═══ -->
    <variablegroup name="상단 탭 메뉴">
      <variable>
        <name>showTabOverview</name>
        <label><![CDATA[ Overview 탭 표시 ]]></label>
        <description><![CDATA[ 상단 메뉴에 Overview 탭을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showTabPosts</name>
        <label><![CDATA[ Posts 탭 표시 ]]></label>
        <description><![CDATA[ 상단 메뉴에 Posts(글 목록) 탭을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showTabGuestbook</name>
        <label><![CDATA[ Guestbook 탭 표시 ]]></label>
        <description><![CDATA[ 상단 메뉴에 Guestbook(방명록) 탭을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showTabTags</name>
        <label><![CDATA[ Tags 탭 표시 ]]></label>
        <description><![CDATA[ 상단 메뉴에 Tags 탭을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>labelOverview</name>
        <label><![CDATA[ Overview 탭 이름 ]]></label>
        <description><![CDATA[ Overview 탭에 표시될 텍스트를 변경합니다. ]]></description>
        <type>STRING</type>
        <option />
        <default>Overview</default>
      </variable>
      <variable>
        <name>labelPosts</name>
        <label><![CDATA[ Posts 탭 이름 ]]></label>
        <description><![CDATA[ Posts 탭에 표시될 텍스트를 변경합니다. ]]></description>
        <type>STRING</type>
        <option />
        <default>Posts</default>
      </variable>
      <variable>
        <name>labelGuestbook</name>
        <label><![CDATA[ Guestbook 탭 이름 ]]></label>
        <description><![CDATA[ Guestbook 탭에 표시될 텍스트를 변경합니다. ]]></description>
        <type>STRING</type>
        <option />
        <default>Guestbook</default>
      </variable>
      <variable>
        <name>labelTags</name>
        <label><![CDATA[ Tags 탭 이름 ]]></label>
        <description><![CDATA[ Tags 탭에 표시될 텍스트를 변경합니다. ]]></description>
        <type>STRING</type>
        <option />
        <default>Tags</default>
      </variable>
    </variablegroup>

    <!-- ═══ 사이드바 설정 ═══ -->
    <variablegroup name="사이드바">
      <variable>
        <name>showSidebar</name>
        <label><![CDATA[ 사이드바 표시 ]]></label>
        <description><![CDATA[ 좌측 사이드바 전체를 표시하거나 숨깁니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showNotice</name>
        <label><![CDATA[ Notice(공지) 표시 ]]></label>
        <description><![CDATA[ 사이드바에 공지사항 영역을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showCategories</name>
        <label><![CDATA[ Categories 표시 ]]></label>
        <description><![CDATA[ 사이드바에 카테고리 목록을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showRecentPosts</name>
        <label><![CDATA[ 최근 글/댓글 표시 ]]></label>
        <description><![CDATA[ 사이드바에 최근 글 및 최근 댓글 탭을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showArchive</name>
        <label><![CDATA[ Archive 표시 ]]></label>
        <description><![CDATA[ 사이드바에 Archive(월별 글 모음)를 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showCalendar</name>
        <label><![CDATA[ Calendar 표시 ]]></label>
        <description><![CDATA[ 사이드바에 달력을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showInsights</name>
        <label><![CDATA[ Insights(방문자 통계) 표시 ]]></label>
        <description><![CDATA[ 사이드바에 방문자 통계(Today/Yesterday/Total)를 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>showPostActivity</name>
        <label><![CDATA[ Post Activity(잔디밭) 표시 ]]></label>
        <description><![CDATA[ 사이드바에 포스트 활동 히트맵(잔디밭)을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
    </variablegroup>

    <!-- ═══ 프로필 설정 ═══ -->
    <variablegroup name="프로필 설정">
      <variable>
        <name>profileUsername</name>
        <label><![CDATA[ 프로필 서브 이름 ]]></label>
        <description><![CDATA[ 닉네임 아래에 표시될 이름/아이디입니다. 비워두면 블로그 제목이 표시됩니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>showFollowBtn</name>
        <label><![CDATA[ Follow 버튼 표시 ]]></label>
        <description><![CDATA[ 프로필 영역에 Follow(구독) 버튼을 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
      <variable>
        <name>profileLocation</name>
        <label><![CDATA[ 위치 텍스트 ]]></label>
        <description><![CDATA[ 프로필에 표시될 위치 정보입니다. 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default>Tistory Blog</default>
      </variable>
      <variable>
        <name>profileLinkText</name>
        <label><![CDATA[ 블로그 링크 표시 텍스트 ]]></label>
        <description><![CDATA[ 프로필에 표시될 링크 텍스트입니다. 비워두면 블로그 주소가 표시됩니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>profileLinkUrl</name>
        <label><![CDATA[ 블로그 링크 URL ]]></label>
        <description><![CDATA[ 프로필 링크 클릭 시 이동할 주소입니다. 비워두면 블로그 주소가 사용됩니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>socialLink1Label</name>
        <label><![CDATA[ SNS 링크 1 이름 ]]></label>
        <description><![CDATA[ 예: GitHub, Twitter. 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>socialLink1Url</name>
        <label><![CDATA[ SNS 링크 1 URL ]]></label>
        <description><![CDATA[ 예: https://github.com/username ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>socialLink2Label</name>
        <label><![CDATA[ SNS 링크 2 이름 ]]></label>
        <description><![CDATA[ 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>socialLink2Url</name>
        <label><![CDATA[ SNS 링크 2 URL ]]></label>
        <description><![CDATA[ 예: https://x.com/username ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>socialLink3Label</name>
        <label><![CDATA[ SNS 링크 3 이름 ]]></label>
        <description><![CDATA[ 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>socialLink3Url</name>
        <label><![CDATA[ SNS 링크 3 URL ]]></label>
        <description><![CDATA[ 예: https://linkedin.com/in/username ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
    </variablegroup>

    <!-- ═══ 레이아웃 ═══ -->
    <variablegroup name="레이아웃">
      <variable>
        <name>pinnedPostCount</name>
        <label><![CDATA[ Pinned Posts 개수 ]]></label>
        <description><![CDATA[ 상단에 고정(Pinned) 표시할 게시글 수를 설정합니다. ]]></description>
        <type>SELECT</type>
        <option><![CDATA[
          [
            {"name":"0", "label":"표시 안함", "value":"0"},
            {"name":"2", "label":"2개", "value":"2"},
            {"name":"4", "label":"4개", "value":"4"},
            {"name":"6", "label":"6개", "value":"6"}
          ]
        ]]></option>
        <default>6</default>
      </variable>
      <variable>
        <name>showThumbnail</name>
        <label><![CDATA[ 글 목록 썸네일 표시 ]]></label>
        <description><![CDATA[ 글 목록에서 썸네일 이미지를 표시합니다. ]]></description>
        <type>BOOL</type>
        <option />
        <default>true</default>
      </variable>
    </variablegroup>

    <!-- ═══ 커스텀 메뉴 ═══ -->
    <variablegroup name="커스텀 메뉴">
      <variable>
        <name>customMenu1Label</name>
        <label><![CDATA[ 메뉴 1 이름 ]]></label>
        <description><![CDATA[ 상단 탭에 추가할 메뉴 이름입니다. 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu1Url</name>
        <label><![CDATA[ 메뉴 1 링크 ]]></label>
        <description><![CDATA[ 페이지/카테고리/공지/외부 URL을 입력하세요. 예: /notice, /category/개발, https://example.com ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu2Label</name>
        <label><![CDATA[ 메뉴 2 이름 ]]></label>
        <description><![CDATA[ 상단 탭에 추가할 메뉴 이름입니다. 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu2Url</name>
        <label><![CDATA[ 메뉴 2 링크 ]]></label>
        <description><![CDATA[ 페이지/카테고리/공지/외부 URL을 입력하세요. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu3Label</name>
        <label><![CDATA[ 메뉴 3 이름 ]]></label>
        <description><![CDATA[ 상단 탭에 추가할 메뉴 이름입니다. 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu3Url</name>
        <label><![CDATA[ 메뉴 3 링크 ]]></label>
        <description><![CDATA[ 페이지/카테고리/공지/외부 URL을 입력하세요. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu4Label</name>
        <label><![CDATA[ 메뉴 4 이름 ]]></label>
        <description><![CDATA[ 상단 탭에 추가할 메뉴 이름입니다. 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu4Url</name>
        <label><![CDATA[ 메뉴 4 링크 ]]></label>
        <description><![CDATA[ 페이지/카테고리/공지/외부 URL을 입력하세요. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu5Label</name>
        <label><![CDATA[ 메뉴 5 이름 ]]></label>
        <description><![CDATA[ 상단 탭에 추가할 메뉴 이름입니다. 비워두면 표시되지 않습니다. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
      <variable>
        <name>customMenu5Url</name>
        <label><![CDATA[ 메뉴 5 링크 ]]></label>
        <description><![CDATA[ 페이지/카테고리/공지/외부 URL을 입력하세요. ]]></description>
        <type>STRING</type>
        <option />
        <default></default>
      </variable>
    </variablegroup>
  </variables>

  <cover>
    <!-- 홈 커버 기능을 사용하려면 여기에 아이템을 정의하세요 -->
  </cover>
</skin>
